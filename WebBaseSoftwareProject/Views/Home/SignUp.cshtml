
@model User
@{
    Layout = null;
    string checkword = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Style/Main.css" />
    <script>document.getElementById("txtComment").value = "";</script>
    <title>SignUp</title>
</head>
<body>
    <div>
        <h1>ASCI ART IMAGE CONVERTER</h1>
        @if (ViewBag.error != null)
        {
            <h2>@ViewBag.error</h2>
        }
        @using (Html.BeginForm())
        {

            <strong>UserName:</strong>  <a id="textcomment">@Html.TextBoxFor(x => x.UserName) </a><br />
            <br />
            <strong>Password:</strong>  <a id="textcomment">@Html.TextBoxFor(x => x.Password, new { Type = "password" })</a> <br />
            <br />
            <strong>Re-Enter Password:</strong>  <a id="textcomment">@Html.TextBox("checkword",checkword)</a> <br />
            <br />
            <input type="submit">
        }
        <img src="~/Images/FS.jpg" alt="The Pasta Lord" id="java" />
    </div>
</body>
</html>